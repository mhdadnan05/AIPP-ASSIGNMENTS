      "source": "// login.js\n// Client-side validation for the login form (non-empty username/password).\n// - Shows clear errors under inputs\n// - Clears errors while typing\n// - Focuses the first invalid field\n// - Progressive enhancement: if JS is disabled, the form still submits and server handles validation\n\ndocument.addEventListener('DOMContentLoaded', () => {\n  const form = document.getElementById('loginForm');\n  if (!form) return; // nothing to do\n\n  const username = document.getElementById('username');\n  const password = document.getElementById('password');\n  const userError = document.getElementById('userError');\n  const passError = document.getElementById('passError');\n\n  // Helper: show an error message for an element\n  function showError(el, message) {\n    if (!el) return;\n    el.textContent = message;\n    el.setAttribute('aria-hidden', 'false');\n  }\n\n  // Helper: clear an error message\n  function clearError(el) {\n    if (!el) return;\n    el.textContent = '';\n    el.setAttribute('aria-hidden', 'true');\n  }\n\n  // Validate on submit\n  form.addEventListener('submit', (e) => {\n    // Reset errors\n    clearError(userError);\n    clearError(passError);\n\n    const userVal = username ? username.value.trim() : '';\n    const passVal = password ? password.value.trim() : '';\n\n    let firstInvalid = null;\n    let valid = true;\n\n    if (!userVal) {\n      showError(userError, 'Please enter your username.');\n      firstInvalid = firstInvalid || username;\n      valid = false;\n    }\n\n    if (!passVal) {\n      showError(passError, 'Please enter your password.');\n      firstInvalid = firstInvalid || password;\n      valid = false;\n    }\n\n    if (!valid) {\n      e.preventDefault(); // stop form submission\n      if (firstInvalid) firstInvalid.focus();\n    }\n    // If valid: allow the form to submit to server (/login)\n  });\n\n  // Clear errors as user types (improve UX)\n  if (username) {\n    username.addEventListener('input', () => {\n      clearError(userError);\n    });\n  }\n  if (password) {\n    password.addEventListener('input', () => {\n      clearError(passError);\n    });\n  }\n\n  // Optional: show/hide password toggle support (uncomment if you add a toggle button)\n  /*\n  const toggleBtn = document.getElementById('togglePass');\n  if (toggleBtn && password) {\n    toggleBtn.addEventListener('click', () => {\n      password.type = password.type === 'password' ? 'text' : 'password';\n      toggleBtn.textContent = password.type === 'password' ? 'Show' : 'Hide';\n    });\n  }\n  */\n});\n",
